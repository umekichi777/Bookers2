<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', user: current_user, book: @book %>

<!--ユーザーの投稿一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <%= image_tag book.user.get_profile_image(50, 50) %>
            <%= link_to book_path(book.id) do %>
            <p><%= book.title %></p>
            <% end %>
            <p><%= book.body %></p>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
