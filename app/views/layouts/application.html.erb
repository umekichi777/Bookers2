<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/0b404df64c.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div class="container">
            <%= link_to root_path do %>
              <span>Bookers</span>
            <% end %>
          <div>
            <ul>
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", books_path do %>
                    <i class="fa-solid fa-house-chimney"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "Users", users_path %>
                </li>
                <li>
                  <%= link_to "Books", books_path %>
                </li>
                <li>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home", root_path do %>
                    <i class="fa-solid fa-house-chimney"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "About", about_path do %>
                    <i class="fa-solid fa-link"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "Sign up", new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus"></i>
                  </li>
                <li>
                  <%= link_to "Log in", new_user_session_path do %>
                    <i class="fa-solid fa-right-to-bracket"></i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <footer>
      <p>CopyRight Infratop.i</p>
    </footer>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </body>
</html>
