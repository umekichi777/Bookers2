<%= flash[:complete] 

<%= render 'list', users: @users %>
<%= render 'list', book: @book %>

<h2>Book detail</h2>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
          <p><%= book.user.name %>
            <%= link_to user_path(book.user) %>
          </p>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <% if book.user == current_user %>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
    </tbody>
    <% end %>
  </table>