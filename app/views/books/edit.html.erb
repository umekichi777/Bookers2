

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <div class="field"><%= f.text_field :title %></div>

  <h4>Opinion</h4>
  <div class="field"><%= f.text_area :body %></div>

  <div class="actions"><%= f.submit "Update Book" %></div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>

